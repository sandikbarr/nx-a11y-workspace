{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@a11y/ui-components": ["libs/shared/ui-components/index.ts"],
      "@a11y/ui-components/form/checkbox": [
        "libs/shared/ui-components/form/checkbox/index.ts"
      ],
      "@a11y/ui-components/form/input": [
        "libs/shared/ui-components/form/input/index.ts"
      ],
      "@a11y/ui-components/primary-nav": [
        "libs/shared/ui-components/primary-nav/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
